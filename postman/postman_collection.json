											"pm.test(\"Access control for specific board\", function(){\r",
											"    const status = pm.response.code;\r",
											"    const currentUserId = parseInt(pm.environment.get(\"CURRENT_USER_ID\"));\r",
											"\r",
											"    if(!currentUserId){\r",
											"        throw new Error(\"CURRENT_USER_ID not set in environment. Set it to the authenticated user's ID.\");\r",
											"    }\r",
											"\r",
											"    if(status === 200){\r",
											"        // If access granted, validate the board\r",
											"        const board = pm.response.json();\r",
											"        pm.expect(board).to.be.an('object');\r",
											"        pm.expect(board).to.have.property('id');\r",
											"        pm.expect(board).to.have.property('owner_id');\r",
											"        pm.expect(board).to.have.property('members').that.is.an('array');\r",
											"\r",
											"        // Check if user is owner or member\r",
											"        const isOwner = board.owner_id === currentUserId;\r",
											"        const isMember = board.members.includes(currentUserId);\r",
											"        pm.expect(isOwner || isMember).to.be.true // Must be authorized\r",
											"    } else if(status === 403 || status === 404){\r",
											"        // If access denied, that's expected for unauthorized users\r",
											"        console.log(\"Access denied as expected for unauthorized user\");\r",
											"    } else {\r",
											"        pm.expect(status).to.be.oneOf([200, 401, 403, 404], `Unexpected status: ${status}`);\r",
											"    }\r",
											"});\r",
											"\r",
											"pm.test(\"Response time is reasonable\", function(){\r",
											"    pm.expect(pm.response.responseTime).to.be.below(2000);\r",
