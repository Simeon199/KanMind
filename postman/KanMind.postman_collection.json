									"});",
									"",
									"pm.test(\"Response is valid JSON array\", function () {",
									"    const jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.be.an('array');",
									"});",
									"",
									"pm.test(\"Only accessible boards are returned\", function () {",
									"    const jsonData = pm.response.json();",
									"    jsonData.forEach(board => {",
									"        pm.expect(board).to.have.property('id').that.is.a('number');",
									"        pm.expect(board).to.have.property('title').that.is.a('string');",
									"        pm.expect(board).to.have.property('member_count').that.is.a('number');",
									"        pm.expect(board).to.have.property('ticket_count').that.is.a('number');",
									"        pm.expect(board).to.have.property('tasks_to_do_count').that.is.a('number');",
									"        pm.expect(board).to.have.property('tasks_high_prio_count').that.is.a('number');",
									"        pm.expect(board).to.have.property('owner_id').that.is.a('number');",
									"        // Ensure no 'members' array is present ",
									"        pm.expect(board).to.not.have.property('members');",
									"    });",
									"});",
									"",
									"pm.test(\"User has access to returned boards (owner or member)\", function () {",
									"    const jsonData = pm.response.json();",
									"    const currentUserId = parseInt(pm.environment.get(\"CURRENT_USER_ID\"));",
									"    if (!currentUserId) {",
									"        throw new Error(\"CURRENT_USER_ID not set in environment. Set it to the authenticated user's ID for permission validation.\");",
									"    }",
									"    jsonData.forEach(board => {",
									"        const isOwner = board.owner_id === currentUserId;",
									"        if (isOwner) {",
									"            console.log(`Board ${board.id} (${board.title}): User is owner.`);",
									"        } else {",
									"            // Assume user is a member (since board was returned and API filters)",
									"            console.log(`Board ${board.id} (${board.title}): User is not owner, assuming member. Member count: ${board.member_count}`);",
									"            pm.expect(board.member_count).to.be.at.least(1);",
									"        }",
									"    });",
